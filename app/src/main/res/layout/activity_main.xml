<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/art_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF7FAF7"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:contentDescription="palay_maiden"
        android:foregroundGravity="center"
        android:src="@drawable/palay_maiden"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/art_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tag_state_description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="11dp"
        android:gravity="center"
        android:text="Palay Maiden"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:ignore="HardcodedText,VisualLintBounds,VisualLintOverlap" />

    <TextView
        android:id="@+id/tag_state_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/artis_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="Palay Maiden from 1920 which depicts a Filipina woman symbolizing the Philippines' staple crop of rice."
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/artis_name"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Fernando Amorsolo"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText,NotSibling" />

    <LinearLayout
        android:id="@+id/linearLayout"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="44dp"
        android:orientation="horizontal"
        android:paddingTop="24dp">

        <Button
            android:id="@+id/previousButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="Previous"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/nextButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:text="Next"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText,TouchTargetSizeCheck" />
    </LinearLayout>


</RelativeLayout>